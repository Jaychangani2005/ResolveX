rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Users collection - allow new user registration, existing users can read/write their own profile
    match /users/{userId} {
      // Allow new user creation (signup) - no auth required
      allow create: if true;
      
      // Allow users to read/write their own profile
      allow read, update: if true;
      
      // Allow admins to read all user profiles
      allow read: if true;
      
      // Only super users can delete users
      allow delete: if false; // Disabled for now, can be enabled later with proper admin checks
    }
    
    // Incidents collection - allow creation and reading
    match /incidents/{incidentId} {
      allow read, write: if true;
      // NGO users can read all incidents
      allow read: if true;
    }
    
    // User activities collection - allow creation and reading
    match /user_activities/{activityId} {
      allow read, write: if true;
    }
    
    // Default rule - allow all access for now (you can restrict this later)
    match /{document=**} {
      allow read, write: if true;
    }
  }
}